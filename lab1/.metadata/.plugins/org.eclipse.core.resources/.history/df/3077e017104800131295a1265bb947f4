package sistema;

import java.util.ArrayList;
import java.util.List;

public class SistemaEscreveNumero {

	public String getNumeroEscrito ( int numero ) {
		String retorno = "";
		
		if ( numero < 0) {
			
		}
		else if ( numero > 1000000000 ) {
			
		}
		else if ( numero == 1000000000 ){
			retorno = "Um milão";
		}
		else {
			ArrayList<String> grupos = (ArrayList) separaGruposDeTres ( numero + "" );
			retorno += centena(grupos.get(0));
		}
		
		return retorno;
	}
	
	private String centena ( String numero ) {
		String retorno = "";
		String[] numeros = separaGruposDeUm ( numero );
		
		int numeroUm = Integer.parseInt(numeros[2]);
		int numeroDois = Integer.parseInt(numeros[1]);
		int numeroTres = Integer.parseInt(numeros[0]);
		
		switch (numeroTres) {
			case 1:
				if(numeroUm == 0 && numeroDois == 0)
					retorno+= "cem";
				else retorno += "cento"; 
			case 2:
				retorno+= "duzentos";
			case 3:
				retorno+= "trezentos";
			case 4:
				retorno+= "quatrocentos";
			case 5:
				retorno+= "quinhentos";
			case 6:
				retorno+= "seiscentos";
			case 7:
				retorno+= "setecentos";
			case 8:
				retorno+= "oitocentos";
			case 9:
				retorno+= "novecentos";
		default:
			break;
		}
		
		if(numeroTres != 0 && (numeroUm != 0 || numeroDois != 0)){
			retorno += " e ";
		}	
		
		if ( numeroDois == 0 ) 
		{
			retorno += umaUnidade(numeroUm);
		}
		else
		{
			retorno += dezena(numeroDois, numeroUm);
		}
		
		return retorno;
	}
	
	private String dezena(int numeroDois, int numeroUm) {
		String retorno = "";
		
		if(numeroDois == 1){
			if(numeroUm == 0){
				retorno += "dez";
			}
			else if(numeroUm == 1){
				retorno += "onze";
			}
			else if(numeroUm == 2){
				retorno += "doze";
			}
			else if(numeroUm == 3){
				retorno += "treze";
			}
			else if(numeroUm == 4){
				retorno += "quatorze";
			}
			else if(numeroUm == 5){
				retorno += "quinze";
			}
			else if(numeroUm == 6){
				retorno += "dezesseis";
			}
			else if(numeroUm == 7){
				retorno += "dezessete";
			}
			else if(numeroUm == 8){
				retorno += "dezoito";
			}
			else if(numeroUm == 9){
				retorno += "dezenove";
			}
		}else if(numeroDois == 2){
			retorno += "vinte";	
		}else if(numeroDois == 3){
			retorno += "trinta";	
		}else if(numeroDois == 4){
			retorno += "quarenta";	
		}else if(numeroDois == 5){
			retorno += "cinquenta";	
		}else if(numeroDois == 6){
			retorno += "sessenta";	
		}else if(numeroDois == 7){
			retorno += "setenta";	
		}else if(numeroDois == 8){
			retorno += "oitenta";	
		}else if(numeroDois == 9){
			retorno += "noventa";	
		}else if(numeroDois == 0){
			retorno += umaUnidade(numeroUm);	
		}
		
		
		if ( numeroDois != 0 && numeroDois != 1 && numeroUm != 0 ) {
			retorno += " e ";
		}
		return retorno;
	}
	
	private String umaUnidade(int numero){
		switch (numero) {
		case 0:
			return "zero";
		case 1:
			return "um";
		case 2:
			return "dois";
		case 3:
			return "tres";
		case 4:
			return "quatro";
		case 5:
			return "cinco";
		case 6:
			return "seis";
		case 7:
			return "sete";
		case 8:
			return "oito";
		case 9:
			return "nove";

		default:
			return null;
		}
	}
	
	private String[] separaGruposDeUm (String numero) {
		String[] grupos = new String[3];
		String[] arrayNumero = numero.split("");
		int indice = 0;
		for (String unidade : arrayNumero) {
			if(!unidade.equals(""))
				grupos[indice++] = unidade;
		}
		return grupos;
	}
	
	private List < String > separaGruposDeTres ( String numero ) {
		
		while(numero.length() < 9){
			numero = 0+numero;
		}
		
		List<String> grupos = new ArrayList<String>();
		String[] arrayNumero = numero.split("");
		int cont = 0; 
		String sub = "";
		
		for (int i = arrayNumero.length-1 ; i >= 0 ; i-- ) {
			if ( !arrayNumero[i].equals("") ) {
				sub+= arrayNumero[i];
				cont++;
			}	
			if ( cont == 3 ) {
				grupos.add( sub );
				cont = 0;
				sub = "";
			}
		}
		
		return grupos;
		
	}
	

}
